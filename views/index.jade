include includes/base
div.wrapper
  article
    each post in posts
      h2 #{post.title}
      div.createdAt #{moment(post.createdAt).format('LLLL')}
      div.post-body !{post.body}...
        a(href="/#{post.slug}") (irakurtzen jarraitu)
      div.tags-wrapper
        h3 Etiketak
        each tag in post.tags
          span.tag !{tag.tag}
  aside
    include ./templates/aside
  footer
    include ./templates/footer

include ./includes/foot