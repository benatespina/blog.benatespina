include includes/base
div.wrapper
  article
    h2 #{post.title}
    div.createdAt #{moment(post.createdAt).format('LLLL')}
    div.post-body !{post.body}
    div.updatedAt #{post.updatedAt}
    h3 Etiketak
    each tag in post.tags
      span.tag
        a(href="/posts/tag/#{tag.tag}") !{tag.tag}
    h3 Iruzkinak
    each comment in post.comments
      div #{comment.email}
      div #{comment.body}
      div.writtenAt #{moment(comment.writtenAt).fromNow()}
  aside
    include ./templates/aside
  footer
    include ./templates/footer

include ./includes/foot