div.tags-aside
  h3
    span.tag-icon
    span Etiketak
  div.tags-wrapper
    div.tag-wrapper
      each tag in tags
        div.tag
          a(href="/posts/tag/#{tag}") !{tag}
div.posts-aside
  h3
    span.posts-icon
    span Aurreko postak
  div.posts-wrapper
    div.post-wrapper
      each post in posts
        div.createdAt #{moment(post.createdAt).format('L')}
        div.post
          a(href="/posts/#{post.slug}") #{post.title}
